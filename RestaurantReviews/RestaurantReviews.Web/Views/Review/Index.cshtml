@model IEnumerable<RestaurantReviews.Web.Models.Review>

<p>
    @Html.ActionLink("Create New Review", "Create", "Review", new { restId = (int)TempData["restId"]}, null)
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reviewer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Reviewer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Review", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details", "Review", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "Review", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
